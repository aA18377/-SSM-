<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="DBconfig.properties"/>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.yan.pojo.SmbmsUser" alias="user"/>
        <typeAlias type="com.yan.pojo.SmbmsBill" alias="bill"/>
        <typeAlias type="com.yan.pojo.SmbmsProvider" alias="pro"/>
        <typeAlias type="com.yan.pojo.SmbmsRole" alias="role"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driverName}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${userName}"/>
                <property name="password" value="${userPassword}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <package name="com.yan.dao"/>
    </mappers>

</configuration>
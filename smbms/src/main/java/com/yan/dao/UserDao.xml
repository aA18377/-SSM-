<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yan.dao.UserDao">
    <!--获取登陆用户-->
    <select id="getLoginUser" resultType="user" parameterType="string">
        select * from smbms_user
        <where>
            userCode=#{userCode}
        </where>
    </select>

    <!--修改用户密码-->
    <update id="changPassword" parameterType="user">
        update smbms_user
        <set>
            userPassword=#{userPassword}
        </set>
        where userCode=#{userCode}
    </update>

    <!--根据用户名和身份id返回人数-->
    <select id="showNumber" parameterType="map" resultType="_int">
        select count(u.id) from smbms_user u left join smbms_role r on u.userRole=r.id
        <where>
            <if test="userName!=null">
                <if test="userName!=''">
                    and userName like %#{userName}%
                </if>
            </if>
            <if test="userRole!=0">
                and userRole=#{userRole}
            </if>
        </where>
    </select>

    <!--显示职位-->
    <select id="showRoleName" resultType="role">
        select *
        from smbms_role
    </select>

    <!--分页-->
    <select id="showUser" resultMap="userPlus" parameterType="map">
        select * from smbms_user u left join smbms_role r on u.userRole=r.id
        <where>
            <if test="userName!=null">
                <if test="userName!=''">
                    and userName like %#{userName}%
                </if>
            </if>
            <if test="userRole!=0">
                and userRole=#{userRole}
            </if>
        </where>
        limit #{totalPageCount},#{pageSize}
    </select>
    <resultMap id="userPlus" type="user">
        <result property="userRoleName" column="roleName"></result>
    </resultMap>

    <!--添加用户-->
    <insert id="addUser" parameterType="user">
        insert into smbms_user(userCode, userName, userPassword, gender, birthday, phone, address, userRole)
            value (#{userCode},#{userName},#{userPassword},#{gender},#{birthday},#{phone},#{address},#{userRole})
    </insert>

    <!--删除用户-->
    <delete id="deleteUser" parameterType="_int">
        delete
        from smbms_user
        where id = #{userid}
    </delete>

    <!--删除用户是否存在-->
    <select id="deleteUserExist" resultMap="userPlus" parameterType="_int">
        select *
        from smbms_user u
                 left join smbms_role r on u.userRole = r.id
        where u.id = #{userid}
    </select>

    <!--修改用户信息-->
    <update id="updateUser" parameterType="map">
        update smbms_user
        <set>
            <if test="userName!=null">
                userName=#{userName},
            </if>
            <if test="gender!=null">
                 gender=#{gender},
            </if>
            <if test="birthday!=null">
                 birthday=#{birthday},
            </if>
            <if test="phone!=null">
                 phone=#{phone},
            </if>
            <if test="address!=null">
                 address=#{address},
            </if>
            <if test="userRole!=null">
                 userRole=#{userRole},
            </if>

        </set>
        where id=#{uid}
    </update>

</mapper>